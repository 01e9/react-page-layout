{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {},
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": ["dom", "es2017"],
        "skipLibCheck": true,
        "outDir": "es",
        "declaration": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}