{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "airbnb-typescript",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/parsers": {
            "@typescript-eslint/parser": [ ".ts", ".tsx" ]
        },
        "import/resolver": {
            "typescript": {}
        }
    },
    "rules": {
        "max-len": ["error", { "code": 120 }]
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "project": "./tsconfig.json"
    }
}